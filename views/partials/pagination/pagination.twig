<nav aria-label="Page navigation">
    <ul class="pagination">
    {% if pagination.prev %}
        <li>
    {% else %}
        <li class="disabled">
    {% endif %}
            <a href="{{ pagination.prev.link }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

{% for page in pagination.pages %}
    {% if page.link %}
        <li>
            <a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
    {% else %}
        <li class="active">
            <span>{{ page.title }}</span>
    {% endif %}
        </li>
{% endfor %}

    {% if pagination.next %}
        <li>
    {% else %}
        <li class="disabled">
    {% endif %}
            <a href="{{pagination.next.link}}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
