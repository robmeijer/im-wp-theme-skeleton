{%  extends 'base.twig' %}

{% block content %}
    <div class="container">
        <div class="blog-header">
            <h1 class="blog-title">{{ function('the_archive_title') }}</h1>
        </div>
        <div class="row">
            <article class="col-sm-8 blog-main">
                {% include 'partials/blog/post.twig' %}
                {% if pagination.pages %}
                    {% include 'partials/pagination/pagination.twig' %}
                {% endif %}
            </article><!-- /.blog-main -->

            <aside class="col-sm-3 col-sm-offset-1 blog-sidebar">
                {% include 'partials/sidebar.twig' %}

                <div class="sidebar-module">
                    <h4>Elsewhere</h4>
                    <ol class="list-unstyled">
                        <li><a href="#">GitHub</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Facebook</a></li>
                    </ol>
                </div>
            </aside><!-- /.blog-sidebar -->

        </div><!-- /.row -->

    </div><!-- /.container -->
{% endblock %}
