{%  extends 'base.twig' %}

{% block breadcrumbs %}
    {% if function('is_date') %}
        {% include 'partials/breadcrumbs/archive-date.twig' %}
    {% elseif function('is_category') %}
        {% include 'partials/breadcrumbs/archive-category.twig' %}
    {% elseif function('is_author') %}
        {% include 'partials/breadcrumbs/archive-author.twig' %}
    {% endif %}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="blog-header">
            <h1 class="blog-title">{{ function('the_archive_title') }}</h1>
        </div>
        <div class="row">
            <article class="col-sm-8 blog-main">
                {% include 'partials/blog/post.twig' %}
                {% include 'partials/pagination/pagination.twig' %}
            </article><!-- /.blog-main -->

            <aside class="col-sm-3 col-sm-offset-1 blog-sidebar">
                <div class="sidebar-module sidebar-module-inset">
                    <h4>About</h4>
                    <p>Etiam porta <em>sem malesuada magna</em> mollis euismod. Cras mattis consectetur purus sit amet fermentum. Aenean lacinia bibendum nulla sed consectetur.</p>
                </div>

                {% include 'partials/sidebar.twig' %}

                <div class="sidebar-module">
                    <h4>Elsewhere</h4>
                    <ol class="list-unstyled">
                        <li><a href="#">GitHub</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Facebook</a></li>
                    </ol>
                </div>
            </aside><!-- /.blog-sidebar -->

        </div><!-- /.row -->

    </div><!-- /.container -->
{% endblock %}
